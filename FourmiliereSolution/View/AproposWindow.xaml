<Window x:Class="FourmiliereSolution.AProposWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FourmiliereSolution"
        mc:Ignorable="d"
        Title="About Window" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Grid.Row="0" Text="{Binding Copyright, StringFormat={}Copyright: {0}}"/>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Grid.Row="1" Text="{Binding Auteur, StringFormat={}Author: {0}}"/>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Grid.Row="2" Text="{Binding DateApplication, StringFormat={}Date: {0}}"/>
        <Button
            Grid.Row="3"
            Content="CLOSE"
            Width="100"
            Margin="30" Click="Button_Click"
            IsDefault="True"
            />
    </Grid>
</Window>
